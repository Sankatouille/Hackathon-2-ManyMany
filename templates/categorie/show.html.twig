{% extends 'base.html.twig' %}

{% block title %}Categorie{% endblock %}

{% block body %}

   <div class="logo">
        <a href="{{ path('home') }}">
            <img class="logo" src="https://upload.wikimedia.org/wikipedia/commons/1/1c/ManoMano_2018.png" alt="Logo de ManoMano">
        </a>
    </div>

<div class="bodyShow">

    <h1>Salle de bain - Les {{ categorie.nom }}</h1>


        <div class="tags">
            <div class="btnTags" value="Matériaux">
                <a href="{{ path('tag_show', {'id': categorie.id, 'tag' :0}) }}">Matériaux</a>
            </div>

            <div class="btnTags" value="Outils">
                <a href="{{ path('tag_show', {'id': categorie.id, 'tag' :1}) }}">Outils</a>
            </div>

            <div class="btnTags" value="Aménagement">
                <a href="{{ path('tag_show', {'id': categorie.id, 'tag' :2}) }}">Aménagement</a>
            </div>
        </div>

        <center>
            <div class="btn-categories"> <a href="{{ path('categorie_index') }}">Parcourez d'autres catégories</a></div>
        </center>

        <div class="searchbar">
            {{ form_start(form) }}
            {{ form_widget(form.search) }}
            {{ form_help(form.search) }}
            {{ form_errors(form.search) }}
            <button id="search" class="btn-primary"><i class="fas fa-search"></i></button>
            {{ form_end(form) }}
        </div>

        <div class="contenant">

            <div class="left">
                <h2>Bloc Filtres</h2>
                    <div class="">

                    </div>

                    <div class="">

                    </div>

                    <div class="">

                    </div>
            </div>

            <div class="souscategories">

                {% for sc in categorie.sousCategorie %}

                    <div class="sousCategorie">
                        <h2>{{ sc.nom }}</h2>
                    </div>

                    <div class="produits">
                        {% for produit in sc.produit|slice (1, 4) %}
                            <div class="produit">
                                <p><img src="{{produit.photo}}" alt="imageproduit"></p>
                                <p id="produitNom">{{ produit.nom|slice(0, 40) }}...</p>
                                <p id="produitPrix">{{ produit.prix }}</p>
                            </div>
                        {% endfor %}
                    </div>
                {% endfor %}

                    <div class="btn-return">
                        <div class="btn">
                            <a  href="{{ path('home') }}">Retour</a>
                        </div>
                    </div>

            </div>


            <div class="right">
                <h2>Bloc Conseil</h2>
                    <div class="">

                    </div>

                    <div class="">

                    </div>

                    <div class="">

                    </div>
            </div>
        </div>

    </div>
</div>
{% endblock %}
