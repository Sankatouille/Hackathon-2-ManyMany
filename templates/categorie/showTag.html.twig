{% extends 'base.html.twig' %}

{% block title %}Categorie{% endblock %}

{% block body %}
<div class="bodyShow">

    <h1>Salle de bain - Les {{ categorie.nom }}</h1>


        <div class="tags">
            <div class="btnTags" value="Matériaux">
                <a href="{{ path('tag_show', {'id': categorie.id, 'tag' :0}) }}">Matériaux</a>
            </div>

            <div class="btnTags" value="Outils">
                <a href="{{ path('tag_show', {'id': categorie.id, 'tag' :1}) }}">Outils</a>
            </div>

            <div class="btnTags" value="Aménagement">
                <a href="{{ path('tag_show', {'id': categorie.id, 'tag' :2}) }}">Aménagement</a>
            </div>
        </div>


        <center>
            <div class="btn-categories"> <a href="{{ path('categorie_index') }}">Parcourez d'autres catégories</a></div>
        </center>

        <div class="searchbar">
            {{ form_start(form) }}
            {{ form_widget(form.search) }}
            {{ form_help(form.search) }}
            {{ form_errors(form.search) }}
            <button id="search" class="btn-primary"><i class="fas fa-search"></i></button>
            {{ form_end(form) }}
        </div>

        <div class="contenant">

            <div class="left">
                <h2>Bloc Filtres</h2>
                    <div class="">

                    </div>

                    <div class="">

                    </div>

                    <div class="">

                    </div>
            </div>


    <div class="produits">

        {% for sc in categorie.sousCategorie %}
        <div class="souscategorie">
            <h3>{{ sc.nom }}</h3>
                <div class="articles">
                {% for produit in sc.produit %}

                {% if produit.tag == tagGet %}

                        <div class="article">
                            <div class="article" href="{{ produit.reference }}">
                                <img src="{{ produit.photo }}"/>
                                <p class="titrearticle">{{ produit.nom }}</p>
                                <p class="prix">{{ produit.prix }}</p>
                                <p class="prix">{{ produit.tag }}</p>
                            </div>
                        </div>

                {% endif %}

                {% endfor %}
                </div>
        </div>
    </div>
        {% endfor %}

            <div class="right">
                <h2>Bloc Conseil</h2>
                    <div class="">

                    </div>

                    <div class="">

                    </div>

                    <div class="">

                    </div>
            </div>
        </div>
    </div>


    <center>
        <div class="btn">
            <a href="{{ path('categorie_index') }}">Retour</a>
        </div>
    </center>
</div>
{% endblock %}
